[require]
SPIRV NO (gl_TexCoord)
GLSL >= 1.10

[vertex shader]
void main()
{
	gl_Position = gl_Vertex;
	gl_TexCoord[0] = gl_Vertex;
}

[fragment shader]
void main()
{
	vec2 c = gl_TexCoord[0].xy;

	for (int i = 0; i < 1; ++i) {
		if (c.x + c.y >= 0.0)
			break;
	}

	gl_FragColor = vec4(1,1,1,1);
}

[test]
clear color 0.0 0.0 0.0 0.0
clear
draw rect -1 -1 2 2
probe all rgb 1.0 1.0 1.0 1.0
