[require]
GLSL >= 1.10

[vertex shader]
void main()
{
	gl_Position = gl_Vertex;
}

[fragment shader]
uniform vec4 arg[4];
void main()
{
	gl_FragColor = arg[1];
}

[test]
uniform vec4 arg[0] 1.0 0.0 0.0 0.0
uniform vec4 arg[1] 0.0 1.0 0.0 0.0
uniform vec4 arg[2] 0.0 0.0 1.0 0.0
uniform vec4 arg[3] 1.0 0.0 1.0 0.0
draw rect -1 -1 2 2
probe rgb 1 1 0.0 1.0 0.0
