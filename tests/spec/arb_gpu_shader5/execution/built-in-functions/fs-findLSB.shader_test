uniform ivec4 iinput -1 -2 -3 -4
uniform uvec4 uinput 0xFFFFFFFF 0xFFFFFFFE 0xFFFFFFFD 0xFFFFFFFC
draw arrays GL_TRIANGLE_FAN 0 4
