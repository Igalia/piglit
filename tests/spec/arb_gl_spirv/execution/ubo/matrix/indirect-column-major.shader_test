#version 450

layout (location = 0) out vec4 color;
layout (location = 10) uniform int u_idx;
layout (std140, binding = 5, column_major) uniform ComponentsBlock
 {
    mat4 m44;
 };

void main()
{
	color = vec4(m44[u_idx][0], m44[u_idx][1], m44[u_idx][2], m44[u_idx][3]);
}

