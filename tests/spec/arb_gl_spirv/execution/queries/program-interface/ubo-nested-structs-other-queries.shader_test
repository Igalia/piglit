#version 450

struct parts {
       vec4 u1;
       vec2 u2[2];
};

struct parts2 {
       parts s1;
       parts s2[2];
};


layout (location = 0) out vec4 outColor;

layout (binding = 0, std140) uniform block {
    parts2 s[2];
} ubo;

void main()
{
    outColor = ubo.s[0].s1.u1 + vec4(ubo.s[0].s1.u2[0], ubo.s[0].s1.u2[1]) +
               ubo.s[1].s2[0].u1 + vec4(ubo.s[0].s2[1].u2[0], ubo.s[1].s2[1].u2[1]);
}

