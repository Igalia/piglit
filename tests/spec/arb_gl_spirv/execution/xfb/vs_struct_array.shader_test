[vertex shader]
#version 450
#extension GL_ARB_enhanced_layouts: require

struct S {
   float f;
   vec4 v;
   float f2[2];
};
layout(xfb_offset=0, xfb_buffer=0) out S var[2]; //FIXME: setting a explicit location there makes the test to fail on  GLSL

layout(location=0) out vec4 color;

void main() {
  color = vec4(0.0, 1.0, 0.0, 1.0);

  var[0].f = 1.0;
  var[0].v = vec4(2.0, 3.0, 4.0, 5.0);
  var[0].f2[0] = 6.0;
  var[0].f2[1] = 7.0;

  var[1].f = 8.0;
  var[1].v = vec4(9.0, 10.0, 11.0, 12);
  var[1].f2[0] = 13.0;
  var[1].f2[1] = 14.0;
}

