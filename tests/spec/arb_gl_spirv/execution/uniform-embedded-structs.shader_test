[fragment shader]
#version 430

struct pair {
        float a;
        float b;
};

struct quadruple {
        pair a;
        pair b;
};

layout(location = 0) uniform struct {
	quadruple r;
	quadruple g;
	quadruple b;
} parts;

out vec4 color;

void main()
{
	color = vec4(parts.r.a.a +
                     parts.r.a.b +
                     parts.r.b.a +
                     parts.r.b.b,
                     parts.g.a.a +
                     parts.g.a.b +
                     parts.g.b.a +
                     parts.g.b.b,
                     parts.b.a.a +
                     parts.b.a.b +
                     parts.b.b.a +
                     parts.b.b.b,
                     1.0);
}

