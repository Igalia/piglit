[fragment shader]

#version 430

layout(location = 0) out vec4 color_out;

layout(std430, binding = 0) buffer ssbo
{
        vec4 base_color;
        vec4 other_colors[];
};

layout(location = 0) uniform uint color_num;

void main()
{
        color_out = base_color + other_colors[color_num];
}

