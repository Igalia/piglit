[fragment shader]
#version 450

layout (location = 0) uniform uint a0_expected;
layout (location = 1) uniform uint a1_expected;
layout (location = 2) uniform uint a2_expected;

layout (binding = 0, offset = 4) uniform atomic_uint a[3];

out vec4 color;

void main()
{
	uint a0 = atomicCounter(a[0]);
	if (a0 != a0_expected) {
		color = vec4(1.0, 0.0, float(a0) / 255.0, 1.0);
		return;
	}

	uint a1 = atomicCounterIncrement(a[1]);
	if (a1 != a1_expected) {
		color = vec4(1.0, 0.1, float(a1) / 255.0, 1.0);
		return;
	}

	uint a2 = atomicCounterDecrement(a[2]);
	if (a2 != a2_expected) {
		color = vec4(1.0, 0.2, float(a2) / 255.0, 1.0);
		return;
	}

	color = vec4(0.0, 1.0, 0.0, 1.0);
}

