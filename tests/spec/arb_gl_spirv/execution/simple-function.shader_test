#version 450

layout(location = 0) out vec4 out_color;
const vec4 color = vec4(0.3, 0.0, 0.0, 1.0);

vec4 ambient(float a, vec4 color) {
	return vec4(color.r + a, color.g + a, color.b + a, color.a);
}

void main()
{
	out_color = ambient(0.1, color);
}

