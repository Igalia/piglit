[require]
GLSL >= 1.20

[vertex shader]
#version 120
void main() { gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex; }

[fragment shader]
#version 120
uniform vec2 c;
uniform vec4 r;
uniform mat4x2 expected;

void main() {
  mat4x2 result = outerProduct(c, r);
  gl_FragColor = (result == expected) ? vec4(0, 1, 0, 1) : vec4(1, 0, 0, 1);
}

