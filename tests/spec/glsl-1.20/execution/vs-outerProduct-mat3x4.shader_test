[require]
GLSL >= 1.20

[vertex shader]
#version 120
uniform vec4 c;
uniform vec3 r;
uniform mat3x4 expected;
varying vec4 color;

void main() {
  gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
  mat3x4 result = outerProduct(c, r);
  color = (result == expected) ? vec4(0, 1, 0, 1) : vec4(1, 0, 0, 1);
}

[fragment shader]
#version 120
varying vec4 color;
void main() { gl_FragColor = color; }

