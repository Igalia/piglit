# Test generated by:
# ./outerProduct.sh

[require]
GLSL >= 1.20

[vertex shader]
uniform vec2 c;
uniform vec2 r;
uniform mat2x2 expected;
varying vec4 color;

void main() {
  gl_Position = gl_ModelViewProjectionMatrix * gl_Vertex;
  mat2x2 result = outerProduct(c, r);
  color = (result == expected) ? vec4(0, 1, 0, 1) : vec4(1, 0, 0, 1);
}

[fragment shader]
varying vec4 color;
void main() { gl_FragColor = color; }

